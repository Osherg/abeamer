{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch abeamer cli",
      "program": "${workspaceFolder}/cli/abeamer-cli.js",
      "args": [
        "render",
        "gallery/animate-plot"
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "mocha test-props",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test/tests/test-props.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "gulp build-docs",
      "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
      "args": [
        "build-docs"
      ]
    },
    {
      "name": "debug gallery/animate-attack-task",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:9000/gallery/animate-attack-task/index.html",
      "webRoot": "${workspaceFolder}"
    },
  ]
}