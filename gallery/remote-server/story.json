{
  "config": {
    "abeamer": {
      "fps": 20,
      "width": 500,
      "height": 140,
      "version": "0.2.0",
      "locale": "en",
      "file": "__PROJDIR__/index.html",
      "renderPos": 0,
      "renderCount": 60,
      "userAgent": "Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) HeadlessChrome/67.0.3396.62 Safari/537.36",
      "metadata": {},
      "plugins": [],
      "animations": [
        [
          [
            {
              "selector": "#star-container",
              "tasks": [
                {
                  "handler": "factory",
                  "params": {
                    "count": 20,
                    "tag": "img",
                    "attrs": [
                      {
                        "name": "src",
                        "value": "assets/a-bentofreire/star.svg"
                      },
                      {
                        "name": "style",
                        "value": "='opacity: ' + random() + ';'",
                        "isFormatted": true
                      }
                    ]
                  }
                }
              ]
            },
            {
              "selector": "#star-container img",
              "duration": "2s",
              "props": [
                {
                  "prop": "top",
                  "value": "=-10-random()*120"
                },
                {
                  "prop": "left",
                  "value": "=250+random()*200"
                }
              ]
            },
            {
              "selector": "#ball-container",
              "tasks": [
                {
                  "handler": "factory",
                  "params": {
                    "count": 20,
                    "tag": "img",
                    "attrs": [
                      {
                        "name": "src",
                        "value": "assets/a-bentofreire/ball.svg"
                      },
                      {
                        "name": "style",
                        "value": "='opacity: ' + random() + ';'",
                        "isFormatted": true
                      }
                    ]
                  }
                }
              ]
            },
            {
              "selector": "#ball-container img",
              "duration": "2s",
              "props": [
                {
                  "prop": "top",
                  "value": "=-10-random()*120"
                },
                {
                  "prop": "right",
                  "value": "=250+random()*200"
                }
              ]
            }
          ],
          [
            {
              "tasks": [
                {
                  "handler": "add-stills",
                  "params": {
                    "duration": "1s"
                  }
                }
              ]
            }
          ]
        ]
      ],
      "html": [
        "",
        "        <div class=\"abeamer-scene\" id=\"scene1\">",
        "            <div id=\"star-container\"></div>",
        "            <div id=\"ball-container\"></div>",
        "        </div>",
        "    "
      ],
      "css": [
        {
          "path": "css/",
          "text": "body, html, .abeamer-story, .abeamer-scene { width: 500px; height: 140px; }"
        },
        {
          "path": "css/",
          "text": "#scene1 { text-align: center; background: white; border: 1px solid rgb(211, 210, 210); color: rgb(44, 44, 44); padding-left: 5px; padding-top: 25px; }"
        },
        {
          "path": "css/",
          "text": "#star-container img { position: absolute; bottom: 10px; left: 10px; }"
        },
        {
          "path": "css/",
          "text": "#ball-container img { position: absolute; bottom: 10px; right: 10px; }"
        }
      ]
    }
  }
}